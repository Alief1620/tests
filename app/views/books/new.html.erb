<h1>New Book</h1>

<%= form_with model: @book, local: true do |form| %>
  <div>
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :name_book %>
    <%= form.text_field :name_book %>
  </div>

  <div>
    <%= form.submit "Create Book" %>
  </div>
<% end %>
